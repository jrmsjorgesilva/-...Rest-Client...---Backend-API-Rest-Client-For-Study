<style>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    list-style: none;
    outline: none;
    border: none;
    appearance: none;
  }

  body {
    background-color: rgb(199, 255, 255);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 3fr;
  }

  .sidebar {
    padding: 10px;
    margin: 30px 0px 30px 20px;
    text-align: left;
  }

  .sidebar__link {
    font-size: 32px;
    font-weight: bolder;
    font-family: 'Courier New', Courier, monospace;
    color:blueviolet;
  }

  .sidebar__link:focus,
  .sidebar__link:hover {
    opacity: .7;
  }

  .sidebar__link:visited,
  .sidebar__link:active {
    opacity: .3;
  }

  .form__label {
    display: block;
    width: 100%;
    margin: 20px 0px;
  }

  .form__input {
    display: block;
    min-width: 400px;
    border-radius: 5px;
    padding: 15px 20px;
    margin: 5px 0px;
  }

  .form__btn {
    font-size: 28px;
    font-weight: 700;
    padding: 20px 35px;
    margin: 20px auto;
    border-radius: 10px;
    cursor: pointer;
    color:white;
    background-color: aqua;
    text-align: left;
  }



  /* media queries */
  @media screen and (max-width: 768px) {
    .grid {
      display: block;
      text-align: center;
    }
  }
