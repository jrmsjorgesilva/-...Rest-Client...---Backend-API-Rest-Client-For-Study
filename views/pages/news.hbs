<!DOCTYPE html>
<html lang="pt-BR">
  <head>

    <!-- meta tags SEO -->

    {{> meta }}

    <!-- meta tags SEO end-->
    

    <title>REST Client | {{ title }}</title>

    <!-- link rel main CSS -->

    {{> linkCSS }}

    <!-- link rel main CSS end -->

  </head>
  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      
      {{> sidebar }}
      
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->

          {{> nav }}

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">{{ title }}</h1>
              <a
                href="#"
                class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
              ><i class="fas fa-download fa-sm text-white-50"></i>
                Generate Report
            </a>

            </div>

            <!-- news article iteration -->
            <ul>
                {{#each article}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <!-- news article iteration ends -->

          <!-- Begin Page Content -->
          </div>

        <!-- Main Content -->
        </div>

      <!-- Footer -->

      {{> footer }}

      <!-- Footer ends -->

      <!-- Content Wrapper ends -->
      </div>

    <!-- Page Wrapper ends -->
    </div>

    <!-- Global Scripts for all pages-->

    {{> scripts }}

    <!-- Global Scripts for all pages end-->
  </body>
</html>
